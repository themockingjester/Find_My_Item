<MainScreen>:
        ########################## this is the first screen there is no issue###############################
    canvas.before:
        Color:
            rgba: 0.1,0.1,0.1,1   # Blue
        # size and position of Canvas
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.5,0,1, 0.8    # Blue
        # size and position of Canvas
        Triangle:
            points: 0,root.height,root.width,root.height,0,root.height/8


    FloatLayout:
        id: lay

        ImageButton:
            source: 'add.png'
            on_release:app.mainscreen_to_Search_Item_Class()
            x:root.width/7.28
            y:root.height/1.5
        ImageButton:

            source: 'refresh.png'

            x:root.width/1.28
            y:root.height/1.5
            on_release:app.mainscreen_to_Total_Item_Class()
        ImageButton:
            source: 'search.png'

            x:root.width/1.28
            y:root.height/4.2
            on_release:app.exit()
        ImageButton:
            source: 'countdown.png'

            x:root.width/7.28
            y:root.height/4.2
            on_release:app.exit()
